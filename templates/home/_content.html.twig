<div class="col-sm-9 padding-right">
    <div class="features_items"><!--features_items-->
        <h2 class="title text-center">ÜRÜNLER</h2>
        {% for row in randProducts %}
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="{{ asset('uploads') }}/images/{{ row.image }}" style="height: 250px; width: auto;" />
                            <h2>{{ row.sprice }} ₺</h2>
                            <p>{{ row.title }}</p>
                            <a href="{{ path('product_detail',{'id':row.id}) }}" class="btn btn-default add-to-cart"><i class="fa fa-search"></i> incele</a>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <h2>{{ row.sprice }} ₺</h2>
                                <p>{{ row.title }}</p>
                                <a href="{{ path('product_detail',{'id':row.id}) }}" class="btn btn-default add-to-cart"><i class="fa fa-search"></i> incele</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}

    </div>
</div>
</div>
</div>
</section>