{% extends 'frontbase.html.twig' %}

{% block title %}{{ data[0].title }}!{% endblock %}
{% block keywords %} {{ data[0].keywords }}!{% endblock %}
{% block description %} {{ data[0].description }}!{% endblock %}
{% block content %}

    <div id="contact-page" class="container">
    <hr class="soften">
    <div class="well well-small">
        <h1>İletişim Bilgileri</h1>
    </div>
    <hr class="soften">
    <div class="row-fluid">
    <div class="span8 relative">

        {{ data[0].contact|raw }}

    </div>
    <div id="contact-page" class="container">
        <h4>Bize Ulaşın</h4>
        {{ include ('admin/messages.html.twig') }}
        <div class="col-sm-5">
            <div class="contact-form">
                <form id="main-contact-form" class="contact-form row" action="" name="messages" method="post">
                    <div class="form-group col-md-6">
                        <input type="text" name="messages[name]" class="form-control" required="required" placeholder="Name">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="email" name="messages[email]" class="form-control" required="required" placeholder="Email">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="messages[subject]" class="form-control" required="required" placeholder="Subject">
                    </div>
                    <div class="form-group col-md-12">
                        <textarea name="messages[message]" id="message" required="required" class="form-control" rows="8" placeholder="Your Message Here"></textarea>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="hidden" name="token" value="{{ csrf_token ('form-message') }}">
                        <input type="submit" name="submit" class="btn btn-primary pull-right" value="Gönder">
                    </div>
                </form>
            </div>
        </div>

    </div>


{% endblock %}