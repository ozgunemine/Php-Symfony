{% extends 'frontbase.html.twig' %}

{% block title %}Orders{% endblock %}
{% block sidebar %} {%    include ('home/_usersidebar.html.twig') %} {% endblock %}

{% block content %}
    <div class="col-12 padding-right">
        <div class="product-details"><!--product-details-->
            <div class="col-sm-9">
                <div class="view-product">
                    <h1>Alışveriş Detayı</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ order.userid }}</td>
                        </tr>
                        <tr>
                            <th>Amount</th>
                            <td>{{ order.amount }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ order.name }}</td>
                        </tr>
                        <tr>
                            <th>Adress</th>
                            <td>{{ order.address }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ order.city }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ order.phone }}</td>
                        </tr>
                        <tr>
                            <th>Shipinfo</th>
                            <td>{{ order.shipinfo }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ order.status }}</td>
                        </tr>
                        <tr>
                            <th>Note</th>
                            <td>{{ order.note }}</td>
                        </tr>

                        </tbody>
                    </table>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product Name</th>
                            <th>Sale Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total = 0 %}
                        {% for rs in orderdetail %}
                            <tr>
                                <td>{{ rs.id }}</td>
                                <td>{{ rs.name }}</td>
                                <td>{{ rs.price }}</td>
                                <td>{{ rs.quantity }}</td>
                                <td>{{ rs.amount }}</td>
                                <td>{{ rs.status }}</td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5"> Order Detail</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="5"><b>Toplam Alışveriş Tutarı : {{ order.amount }} TL </b> <br>

                            </td>
                        </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
