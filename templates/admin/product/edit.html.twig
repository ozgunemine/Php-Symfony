<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            {{ include('admin/messages.html.twig') }}
            <h2>Edit Product</h2>

            <small><a href="{{ path('admin_product_new') }}" button type="button" class="btn bg-purple waves-effect"></button>Yeni Product Ekle</a></small>
            {{ include('admin/product/_form.html.twig') }}

            <script>
                ClassicEditor
                    .create( document.querySelector( '#detail' ) )
                    .catch( error => {
                        console.error( error );
                    } );
            </script>

            <table class="table">


                <tbody>
                {% for product in product %}
                <a>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.amount }}</td>
                    <td>{{ product.pprice }}</td>
                    <td>{{ product.sprice }}</td>
                    <td>{{ product.min }}</td>

                    <td>
                        <a href="javascript:openWin( '{{ path('admin_product_iedit', {'id': product.id}) }}','','toolbar=no,location=no,directories=no,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                            {% if product.image==null %}
                                <img src="{{ asset('admin') }}/img/image.png" height="32" width="32">
                            {% else %}
                                <img src="{{ asset('uploads') }}/images/{{ product.image }}" ,height="40" width="40">
                            {% endif %}
                        </a>

                    </td>
                    <td>
                        <a href="javascript:openWin( '{{ path('admin_image_new', {'pid': product.id}) }}','','toolbar=no,location=no,directories=no,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                            <img src="{{ asset('admin') }}/img/gallery.png" height="32">
                        </a>
                    </td>
                    <td>{{ product.categoryId }}</td>
                    <td>{{ product.status }}</td>
                    <td>
                    <td><a><a href="{{ path('admin_product_show', {'id': product.id}) }}"button type="button" class="btn bg-teal btn-block btn-sm waves-effect"></button>Göster</a></td>
                    <td><a><a href="{{ path('admin_product_edit', {'id': product.id}) }}"button type="button" class="btn bg-teal btn-block btn-sm waves-effect"></button>Düzenle</a></td>
                    <td><a><a href="{{ include('admin/product/_delete_form.html.twig')}}</a></td>
                </td>
            </tr>
        {% else %}

                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('admin_product_new') }}">Create new</a>
