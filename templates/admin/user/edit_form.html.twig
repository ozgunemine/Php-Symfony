    </section>

    <section class="content">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        <b>Üye Düzenleme</b>
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Action</a></li>
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Another action</a></li>
                                <li><a href="javascript:void(0);" class=" waves-effect waves-block">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <form class="form-horizontal" method="post">
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="email_address_2">Adı Soyadı</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="text" name="users[name]" value="{{ user.name }}" id=email_address_2" class="form-control" placeholder="Adınızı ve soyadınızı giriniz">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="email_address_2">Email</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="email" name="users[email]"value="{{ user.email }}"id="email_address_2" class="form-control" placeholder="Email adresinizi giriniz">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="password_2">Parola</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        <input type="password" name="users[password]"value="{{ user.password }}" id="password_2" class="form-control" placeholder="Parolanızı giriniz">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group ">
                                <label for="password_2" class="col-sm-2 control-label">Türü</label>

                                    <div class="col-sm-5">
                                        <select name="users[roles]"class="form-control">
                                            {% for item in user.roles  %}
                                                <option selected>{{ item }}</option>
                                            {% endfor %}
                                            <option>ROLE_ADMİN</option>
                                            <option>ROLE_USER</option>
                                            <option>ROLE_POWER</option>
                                            <option>ROLE_MEMBER</option>
                                        </select>
                                     </div>
                        </div>
                        <div class="form-group">
                                <label for="password_2" class="col-sm-2 control-label">Aktif Durumu</label>
                                    <div class="col-sm-5">
                                        <select name="users[status]"class="form-control">
                                            <option>{{ user.status }}</option>
                                            <option>True</option>
                                            <option>False</option>
                                        </select>
                                    </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                <button type="submit" class="btn btn-primary m-t-15 waves-effect">KAYDET</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
