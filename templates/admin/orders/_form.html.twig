{{ include('admin/messages.html.twig') }}

<div class="col-xl-10 stretch-card">
    <div class="card-body">
        <form class="forms-sample" method="post" name="order" action="{{ path('orders_new') }}">

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Ödenecek Tutar :</label>
                <div class="col-sm-8">
                    <input type="text" name="orders[amount]" value="{{ total }}" placeholder="name" class="form-control">

                </div>
                <hr>
                <br>Kargo Alıcı Bilgileri
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Adı Soyadı :</label>
                <div class="col-sm-8">
                    <input type="text" name="orders[name]" value="{{ app.user.name }}" class="form-control"
                           placeholder="name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Adresi :</label>
                <div class="col-sm-8">
                    <input type="text" name="orders[adress]" value="{{ app.user.adress }}" class="form-control"
                           placeholder="Adres">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Şehir :</label>
                <div class="col-sm-8">
                    <input type="text" name="orders[city]" value="{{ app.user.city }}"
                           class="form-control" placeholder="Şehir">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Telefon</label>
                <div class="col-sm-8">
                    <input type="text" name="orders[phone]" value="{{ app.user.phone }}"
                           class="form-control" placeholder="Telefon">
                </div>
            </div>
            <hr>
            Kredi Kartı Bilgileri
            <hr>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Adı Soyadı</label>
                <div class="col-sm-8">
                    <input type="text" name="cardholdername" value=""
                           class="form-control" placeholder="Kart Adı Soyadı">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Kart Numarası</label>
                <div class="col-sm-8">
                    <input type="text" name="cardholdername" value=""
                           class="form-control" placeholder="Kart Numarası">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Son Kullanım Tarihi</label>
                <div class="col-sm-8">
                    <input type="text" name="cardholdername" value=""
                           class="form-control" placeholder="Son Kullanım Tarihi">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Güvenlik Kodu</label>
                <div class="col-sm-8">
                    <input type="text" name="cardholdername" value=""
                           class="form-control" placeholder="Güvenlik Kodu">
                </div>
            </div>

            <input type="hidden" name="token" value="{{ csrf_token('form-order') }}" />
            <button type="submit" class="btn btn-success mr-2">Satın Al</button>

        </form>
    </div>

</div>
</div>
</div>
</div>
</section>